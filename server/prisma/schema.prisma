generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String  @id @default(cuid()) 
  name              String
  email             String  @unique
  age               Int
  password          String?
  numberPublication Int?
  listPublications  Publication[]
  
}

model Publication {
  id                String  @id @default(cuid()) 
  title             String
  description       String
  authorId          String?
  author            User?   @relation(fields: [authorId], references: [id])
  image             String
  comment           String?
  like              Int
}

